{
  "name": "pfx-view",
  "displayName": "PFX/P12 Viewer",
  "description": "A read-only viewer for PFX/P12 certificate files. View certificate details, validity, and metadata with a beautiful UI.",
  "version": "0.0.0-placeholder",
  "publisher": "timheuer",
  "author": {
    "name": "Tim Heuer",
    "url": "https://timheuer.com"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/timheuer/pfx-view"
  },
  "bugs": {
    "url": "https://github.com/timheuer/pfx-view/issues"
  },
  "qna": "https://github.com/timheuer/pfx-view/issues",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "pfx",
    "p12",
    "certificate",
    "ssl",
    "tls",
    "x509",
    "pkcs12"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "pfx-view.pfxViewer",
        "displayName": "PFX/P12 Viewer",
        "selector": [
          {
            "filenamePattern": "*.pfx"
          },
          {
            "filenamePattern": "*.p12"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-forge": "^1.3.14",
    "@types/vscode": "^1.107.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.44",
    "node-forge": "^1.3.3"
  }
}
